<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context = "http://www.springframework.org/schema/context"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    
    <context:annotation-config/>
    <context:property-placeholder location="spring.info.propertyFile" />
    <bean id ="student" class="com.Spring.loadingfrompropertyfile.Student">
		<!--Without this properties here we can write them directly in Student file
		<property name="studentName" value="${student.studentName}"></property>
 	 	<property name="courseEnrolled" value="${student.courseEnrolled}"></property>
 	 	<property name="hobby" value="${student.hobby}"></property>-->
 	</bean>
</beans>